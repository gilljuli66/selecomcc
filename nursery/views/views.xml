<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view" id="nursery_plant_view_tree">
		<field name="name">Plants tree View</field>
		<field name="model">nursery.plant</field>
		<field name="priority" eval="16"/>
		<field name="arch" type="xml">
			<tree string="Plant List">
				<field name="name"/>
				<field name="price"/>
			</tree>
		</field>
	</record>

<record model="ir.ui.view" id="nursery_plant_view_form">
		<field name="name">nursery.plant.view.form</field>
		<field name="model">nursery.plant</field>
		<field name="arch" type="xml">
			<form string="Plant">
				<sheet>
				<h1>
					<field name="name" placeholder="Plant Name"/>
				</h1>
				<notebook>
					<page string="shop">
						<group>
							<field name="price"/>
						</group>
					</page>
				</notebook>
			</sheet>
			</form>
		</field>
	</record>
	
</odoo>